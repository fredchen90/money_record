<div class="col-md-12">
  <div class="new_record">
    <%= link_to("New Record", new_record_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Description</td>
        <td>price</td>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td>#</td>
          <td><%= link_to(record.description, record_path(record)) %></td>
          <td><%= record.price %></td>
          <td>
              <%= link_to("Edit", edit_record_path(record), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", record_path(record),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
    <td>
      <td>Total</td>
      <td><%= render_total_price %></td>
    </td>
  </table>
</div>